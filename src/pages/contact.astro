---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Contact Us - Simple Dental Katy" description="Contact Simple Dental in Katy, TX. Schedule your appointment today. Call (281) 555-0123 or use our online form. Convenient hours and location.">
  <Header />
  <main>
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-sage-50 to-white py-20">
      <div class="container-max">
        <div class="text-center animate-on-scroll">
          <h1 class="hero-heading mb-6">Contact Simple Dental</h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Ready to schedule your appointment? We're here to help you achieve optimal oral health. Contact us today to get started.
          </p>
        </div>
      </div>
    </section>
    
    <!-- Quick Contact Options -->
    <section class="section-spacing bg-white">
      <div class="container-max">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
          <div class="card p-8 text-center animate-on-scroll">
            <div class="w-16 h-16 bg-dental-blue-100 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-dental-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-sage-700 mb-4">Call Us</h3>
            <p class="text-gray-600 mb-4">Speak directly with our friendly staff</p>
            <a href="tel:+12815550123" class="btn-primary">
              (281) 555-0123
            </a>
          </div>
          
          <div class="card p-8 text-center animate-on-scroll">
            <div class="w-16 h-16 bg-sage-100 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-sage-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-sage-700 mb-4">Email Us</h3>
            <p class="text-gray-600 mb-4">Send us a message anytime</p>
            <a href="mailto:info@simpledentalkaty.com" class="btn-secondary">
              Send Email
            </a>
          </div>
          
          <div class="card p-8 text-center animate-on-scroll">
            <div class="w-16 h-16 bg-terracotta rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-sage-700 mb-4">Visit Us</h3>
            <p class="text-gray-600 mb-4">Come see our modern office</p>
            <a href="https://maps.google.com/?q=123+Main+Street,+Katy,+TX+77494" target="_blank" class="btn-outline">
              Get Directions
            </a>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Main Contact Section -->
    <section class="section-spacing bg-sage-50">
      <div class="container-max">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
          <!-- Contact Form -->
          <div class="animate-on-scroll">
            <div class="card p-8">
              <h2 class="text-2xl font-semibold text-sage-700 mb-6">Schedule Your Appointment</h2>
              <p class="text-gray-600 mb-8">
                Fill out the form below and we'll contact you within 24 hours to schedule your appointment. For urgent matters, please call us directly.
              </p>
              
              <form class="space-y-6" id="contact-form">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <div>
                    <label for="firstName" class="block text-sm font-medium text-gray-700 mb-2">First Name *</label>
                    <input type="text" id="firstName" name="firstName" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-dental-blue-500 focus:border-transparent transition-colors">
                  </div>
                  <div>
                    <label for="lastName" class="block text-sm font-medium text-gray-700 mb-2">Last Name *</label>
                    <input type="text" id="lastName" name="lastName" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-dental-blue-500 focus:border-transparent transition-colors">
                  </div>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <div>
                    <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email Address *</label>
                    <input type="email" id="email" name="email" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-dental-blue-500 focus:border-transparent transition-colors">
                  </div>
                  <div>
                    <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">Phone Number *</label>
                    <input type="tel" id="phone" name="phone" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-dental-blue-500 focus:border-transparent transition-colors">
                  </div>
                </div>
                
                <div>
                  <label for="service" class="block text-sm font-medium text-gray-700 mb-2">Service Interested In</label>
                  <select id="service" name="service" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-dental-blue-500 focus:border-transparent transition-colors">
                    <option value="">Select a service</option>
                    <option value="general">General Dentistry</option>
                    <option value="cleaning">Dental Cleaning</option>
                    <option value="cosmetic">Cosmetic Dentistry</option>
                    <option value="whitening">Teeth Whitening</option>
                    <option value="invisalign">Invisalign</option>
                    <option value="restorative">Restorative Dentistry</option>
                    <option value="implants">Dental Implants</option>
                    <option value="pediatric">Pediatric Dentistry</option>
                    <option value="emergency">Emergency Care</option>
                    <option value="consultation">Consultation</option>
                    <option value="other">Other</option>
                  </select>
                </div>
                
                <div>
                  <label for="preferredTime" class="block text-sm font-medium text-gray-700 mb-2">Preferred Appointment Time</label>
                  <select id="preferredTime" name="preferredTime" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-dental-blue-500 focus:border-transparent transition-colors">
                    <option value="">No preference</option>
                    <option value="morning">Morning (8 AM - 12 PM)</option>
                    <option value="afternoon">Afternoon (12 PM - 5 PM)</option>
                    <option value="saturday">Saturday</option>
                  </select>
                </div>
                
                <div>
                  <label for="insurance" class="block text-sm font-medium text-gray-700 mb-2">Dental Insurance Provider</label>
                  <input type="text" id="insurance" name="insurance" placeholder="e.g., Delta Dental, Cigna, Aetna" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-dental-blue-500 focus:border-transparent transition-colors">
                </div>
                
                <div>
                  <label for="message" class="block text-sm font-medium text-gray-700 mb-2">Message</label>
                  <textarea id="message" name="message" rows="4" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-dental-blue-500 focus:border-transparent transition-colors" placeholder="Tell us about your dental needs, concerns, or questions..."></textarea>
                </div>
                
                <div class="flex items-start space-x-3">
                  <input type="checkbox" id="newPatient" name="newPatient" class="mt-1 w-4 h-4 text-dental-blue-600 border-gray-300 rounded focus:ring-dental-blue-500">
                  <label for="newPatient" class="text-sm text-gray-600">
                    I am a new patient to Simple Dental
                  </label>
                </div>
                
                <div class="flex items-start space-x-3">
                  <input type="checkbox" id="consent" name="consent" required class="mt-1 w-4 h-4 text-dental-blue-600 border-gray-300 rounded focus:ring-dental-blue-500">
                  <label for="consent" class="text-sm text-gray-600">
                    I consent to receive communications from Simple Dental regarding my appointment and dental care. *
                  </label>
                </div>
                
                <button type="submit" class="btn-primary w-full">
                  Send Message
                </button>
                
                <p class="text-sm text-gray-500 text-center">
                  We'll respond within 24 hours. For urgent matters, please call (281) 555-0123.
                </p>
              </form>
            </div>
          </div>
          
          <!-- Office Information -->
          <div class="animate-on-scroll">
            <div class="space-y-8">
              <!-- Office Details -->
              <div class="card p-8">
                <h3 class="text-2xl font-semibold text-sage-700 mb-6">Visit Our Office</h3>
                
                <div class="space-y-6">
                  <div class="flex items-start space-x-4">
                    <div class="w-12 h-12 bg-sage-100 rounded-lg flex items-center justify-center flex-shrink-0">
                      <svg class="w-6 h-6 text-sage-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      </svg>
                    </div>
                    <div>
                      <h4 class="font-semibold text-sage-700 mb-1">Address</h4>
                      <p class="text-gray-600">123 Main Street<br>Katy, TX 77494</p>
                      <a href="https://maps.google.com/?q=123+Main+Street,+Katy,+TX+77494" target="_blank" class="text-dental-blue-600 hover:text-dental-blue-700 text-sm transition-colors">
                        Get Directions â†’
                      </a>
                    </div>
                  </div>
                  
                  <div class="flex items-start space-x-4">
                    <div class="w-12 h-12 bg-sage-100 rounded-lg flex items-center justify-center flex-shrink-0">
                      <svg class="w-6 h-6 text-sage-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                      </svg>
                    </div>
                    <div>
                      <h4 class="font-semibold text-sage-700 mb-1">Phone</h4>
                      <a href="tel:+12815550123" class="text-dental-blue-600 hover:text-dental-blue-700 transition-colors">
                        (281) 555-0123
                      </a>
                      <p class="text-sm text-gray-500">Main office line</p>
                    </div>
                  </div>
                  
                  <div class="flex items-start space-x-4">
                    <div class="w-12 h-12 bg-sage-100 rounded-lg flex items-center justify-center flex-shrink-0">
                      <svg class="w-6 h-6 text-sage-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                      </svg>
                    </div>
                    <div>
                      <h4 class="font-semibold text-sage-700 mb-1">Email</h4>
                      <a href="mailto:info@simpledentalkaty.com" class="text-dental-blue-600 hover:text-dental-blue-700 transition-colors">
                        info@simpledentalkaty.com
                      </a>
                      <p class="text-sm text-gray-500">General inquiries</p>
                    </div>
                  </div>
                </div>
              </div>
              
              <!-- Office Hours -->
              <div class="card p-8">
                <h3 class="text-2xl font-semibold text-sage-700 mb-6">Office Hours</h3>
                
                <div class="space-y-3">
                  <div class="flex justify-between items-center py-3 border-b border-gray-100">
                    <span class="font-medium text-gray-700">Monday</span>
                    <span class="text-gray-600">8:00 AM - 5:00 PM</span>
                  </div>
                  <div class="flex justify-between items-center py-3 border-b border-gray-100">
                    <span class="font-medium text-gray-700">Tuesday</span>
                    <span class="text-gray-600">8:00 AM - 5:00 PM</span>
                  </div>
                  <div class="flex justify-between items-center py-3 border-b border-gray-100">
                    <span class="font-medium text-gray-700">Wednesday</span>
                    <span class="text-gray-600">8:00 AM - 5:00 PM</span>
                  </div>
                  <div class="flex justify-between items-center py-3 border-b border-gray-100">
                    <span class="font-medium text-gray-700">Thursday</span>
                    <span class="text-gray-600">8:00 AM - 5:00 PM</span>
                  </div>
                  <div class="flex justify-between items-center py-3 border-b border-gray-100">
                    <span class="font-medium text-gray-700">Friday</span>
                    <span class="text-gray-600">8:00 AM - 5:00 PM</span>
                  </div>
                  <div class="flex justify-between items-center py-3 border-b border-gray-100">
                    <span class="font-medium text-gray-700">Saturday</span>
                    <span class="text-gray-600">8:00 AM - 2:00 PM</span>
                  </div>
                  <div class="flex justify-between items-center py-3">
                    <span class="font-medium text-gray-700">Sunday</span>
                    <span class="text-gray-600">Closed</span>
                  </div>
                </div>
                
                <div class="mt-6 p-4 bg-dental-blue-50 rounded-lg">
                  <h4 class="font-semibold text-dental-blue-700 mb-2">Emergency Care</h4>
                  <p class="text-sm text-dental-blue-700">
                    We provide after-hours emergency care for our patients. Call our main number and follow the prompts for emergency instructions.
                  </p>
                </div>
              </div>
              
              <!-- New Patient Info -->
              <div class="card p-8">
                <h3 class="text-2xl font-semibold text-sage-700 mb-6">New Patient Information</h3>
                
                <div class="space-y-4">
                  <div class="flex items-start space-x-3">
                    <svg class="w-5 h-5 text-sage-600 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <div>
                      <h4 class="font-semibold text-gray-700">What to Bring</h4>
                      <p class="text-sm text-gray-600">Insurance card, ID, list of medications, previous dental records</p>
                    </div>
                  </div>
                  
                  <div class="flex items-start space-x-3">
                    <svg class="w-5 h-5 text-sage-600 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <div>
                      <h4 class="font-semibold text-gray-700">Arrive Early</h4>
                      <p class="text-sm text-gray-600">Please arrive 15 minutes early to complete paperwork</p>
                    </div>
                  </div>
                  
                  <div class="flex items-start space-x-3">
                    <svg class="w-5 h-5 text-sage-600 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <div>
                      <h4 class="font-semibold text-gray-700">First Visit</h4>
                      <p class="text-sm text-gray-600">Comprehensive exam, cleaning, and X-rays (if needed)</p>
                    </div>
                  </div>
                </div>
                
                <div class="mt-6 p-4 bg-sage-50 rounded-lg">
                  <h4 class="font-semibold text-sage-700 mb-2">New Patient Special</h4>
                  <p class="text-sm text-gray-600">
                    Comprehensive exam, cleaning, and X-rays for just $99 (reg. $300). Valid for new patients without insurance.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Map Section -->
    <section class="section-spacing bg-white">
      <div class="container-max">
        <div class="text-center mb-12 animate-on-scroll">
          <h2 class="section-heading">Find Us in Katy</h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            We're conveniently located in the heart of Katy with easy access and plenty of parking.
          </p>
        </div>
        
        <div class="animate-on-scroll">
          <div class="bg-gray-200 rounded-lg h-96 flex items-center justify-center">
            <div class="text-center">
              <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <p class="text-gray-500 mb-4">Interactive map would be embedded here</p>
              <a href="https://maps.google.com/?q=123+Main+Street,+Katy,+TX+77494" target="_blank" class="btn-primary">
                Open in Google Maps
              </a>
            </div>
          </div>
        </div>
        
        <div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="text-center animate-on-scroll">
            <div class="w-12 h-12 bg-sage-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-sage-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a2 2 0 012-2h4a2 2 0 012 2v4m-6 0V6a2 2 0 012-2h4a2 2 0 012 2v1m-6 0h8m-8 0v10a2 2 0 002 2h4a2 2 0 002-2V7m-8 0H4a2 2 0 00-2 2v10a2 2 0 002 2h4m0-6h.01M16 11h.01"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-sage-700 mb-2">Free Parking</h3>
            <p class="text-gray-600 text-sm">Ample parking available in our lot</p>
          </div>
          
          <div class="text-center animate-on-scroll">
            <div class="w-12 h-12 bg-dental-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-dental-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-sage-700 mb-2">Easy Access</h3>
            <p class="text-gray-600 text-sm">Ground floor location, wheelchair accessible</p>
          </div>
          
          <div class="text-center animate-on-scroll">
            <div class="w-12 h-12 bg-terracotta rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-sage-700 mb-2">Convenient Hours</h3>
            <p class="text-gray-600 text-sm">Extended hours including Saturdays</p>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
  
  <script>
    // Form submission handling
    const form = document.getElementById('contact-form') as HTMLFormElement;
    
    form?.addEventListener('submit', (e) => {
      e.preventDefault();
      
      // Get form data
      const formData = new FormData(form);
      const data = Object.fromEntries(formData);
      
      // Show success message (in a real implementation, you'd send this to a server)
      alert('Thank you for your message! We\'ll contact you within 24 hours to schedule your appointment.');
      
      // Reset form
      form.reset();
    });
  </script>
</Layout>