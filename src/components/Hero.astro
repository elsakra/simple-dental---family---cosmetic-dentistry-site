---
// Hero component
---

<section class="relative bg-gradient-to-br from-sage-50 to-white overflow-hidden">
  <!-- Background decorative elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute -top-40 -right-40 w-80 h-80 bg-sage-100 rounded-full opacity-50 float-animation"></div>
    <div class="absolute -bottom-40 -left-40 w-96 h-96 bg-dental-blue-50 rounded-full opacity-50 float-animation"></div>
  </div>
  
  <div class="container-max relative">
    <div class="py-20 md:py-32">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 items-center">
        <!-- Left decorative image -->
        <div class="hidden lg:block lg:col-span-3">
          <div class="relative">
            <div class="w-64 h-64 bg-gradient-to-br from-sage-200 to-sage-300 rounded-full flex items-center justify-center float-animation">
              <div class="w-48 h-48 bg-white rounded-full flex items-center justify-center shadow-lg">
                <svg class="w-24 h-24 text-sage-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Center content -->
        <div class="lg:col-span-6 text-center">
          <div class="animate-on-scroll">
            <h1 class="hero-heading mb-6">
              Your Family's
              <span class="text-dental-blue-500">Dental Health</span>
              Made Simple
            </h1>
            <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto leading-relaxed">
              Quality family and cosmetic dentistry in Katy, TX. We make dental care comfortable, convenient, and affordable for the whole family.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <a href="/contact" class="btn-primary">
                Schedule Appointment
              </a>
              <a href="tel:+12815550123" class="btn-secondary">
                Call (281) 555-0123
              </a>
            </div>
          </div>
          
          <!-- Trust indicators -->
          <div class="mt-12 animate-on-scroll">
            <div class="flex flex-wrap justify-center items-center gap-8 text-sm text-gray-500">
              <div class="flex items-center space-x-2">
                <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                </svg>
                <span>4.9/5 Rating</span>
              </div>
              <div class="flex items-center space-x-2">
                <svg class="w-5 h-5 text-sage-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span>500+ Happy Families</span>
              </div>
              <div class="flex items-center space-x-2">
                <svg class="w-5 h-5 text-sage-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span>Same-Day Appointments</span>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Right decorative image -->
        <div class="hidden lg:block lg:col-span-3">
          <div class="relative">
            <div class="w-64 h-64 bg-gradient-to-br from-dental-blue-200 to-dental-blue-300 rounded-full flex items-center justify-center float-animation" style="animation-delay: -2s;">
              <div class="w-48 h-48 bg-white rounded-full flex items-center justify-center shadow-lg">
                <svg class="w-24 h-24 text-dental-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                </svg>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Bottom wave separator -->
  <div class="absolute bottom-0 left-0 right-0">
    <svg class="w-full h-12 text-white" preserveAspectRatio="none" viewBox="0 0 1200 120" fill="currentColor">
      <path d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z"></path>
    </svg>
  </div>
</section>